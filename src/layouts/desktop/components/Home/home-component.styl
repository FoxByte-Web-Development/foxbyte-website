.dropdown
   padding: 15px 40px
   border-radius: 28.5px;
   margin-top: -1rem;
   margin-left: 18%;
   display: flex
   justify-content: center
   align-items: center
   color: white
   background: #333333
   background: #333333
   position: relative
   font-size: 18px
   perspective: 1000px
   z-index: 100
   &:hover
     background: #414141
     cursor: pointer
     
   &:hover .dropdown_menu li
     display: block
   

 .dropdown_menu
   position: absolute
   
   top: 0%
   left: 0
   width: 100%
   perspective: 1000px
   z-index: -1
   li
    display: none
    color: white
    background-color: #333333
    padding: 10px 20px
    font-size: 16px
    opacity: 0
    &:hover
      background-color: #414141

  .dropdown_menu-2
      for num in (1..5)
         .dropdown_item-{num}  
           transform-origin: top center
           animation: rotateX 300ms (num * 60ms) ease-in-out forwards
    
    
    @keyframes rotateX {
      0% {
        opacity: 0;
        transform: rotateX(-90deg);
      }
      50% {
        transform: rotateX(-20deg);
      }
      100% {
        opacity: 1;
        transform: rotateX(0deg);
      }
    }

    #boton-esp{
      border-radius: 28.5px 28.5px 0px 0px;
      padding-top: 30%;
    }

    #boton-ing{
      border-radius: 0px 0px 28.5px 28.5px ;
    }

    #img-world{
