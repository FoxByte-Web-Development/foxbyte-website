#ul-sobrenosotros {
  text-decoration: none;
  width: 240px;
  padding 0;
  transform-origin: center;
  
}

#ul-sobrenosotros:after {
 background: none repeat scroll 0 0 transparent;
  bottom: 0;
  content: "";
  display: block;
  height: 2px;
  left: 50%;
  position: absolute;
  background: #fff;
  transition: width 0.3s ease 0s, left 0.3s ease 0s;
  width: 0;
  
}

#ul-sobrenosotros:hover:after { 
  width: 100%; 
  left: 0; 
}
 

